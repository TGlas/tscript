{
    "compilerOptions": 
    {
        "target": "es5",
        "lib": ["DOM", "ES2018", "ESNext"],
        "module": "CommonJS",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "esModuleInterop": true,
        "moduleResolution": "Classic",
        
        "noFallthroughCasesInSwitch": true,
        "incremental": false,
        //"strictNullChecks": true //would be nice if all these would work.
        //"noImplicitAny": true,
        //"noImplicitReturns" : true,
        //"noImplicitThis": true,
    },
    
    "include": ["./node_modules/"]
    
}